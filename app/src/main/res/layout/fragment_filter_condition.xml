<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="25dp"
    android:layout_marginTop="25dp"
    android:layout_marginEnd="25dp"
    tools:context=".FilterDialogFragment">

    <TextView
        android:id="@+id/titleCatgories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="25dp"
        android:clickable="false"
        android:text="Categories"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20dp"
        />
    <LinearLayout
        android:id="@+id/categoriesItem"
        android:layout_below="@+id/titleCatgories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:orientation="horizontal">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/categoryFilterRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        </androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>

    <TextView
        android:id="@+id/titleSortBy"
        android:layout_below="@+id/categoriesItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="25dp"
        android:clickable="false"
        android:text="Sort By"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20dp"
        />

    <LinearLayout
        android:id="@+id/sortByItem"
        android:layout_below="@+id/titleSortBy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:orientation="horizontal">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/sortByRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        </androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>

    <TextView
        android:id="@+id/titlePrice"
        android:layout_below="@+id/sortByItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:clickable="false"
        android:text="Price"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20dp"
        />
    <LinearLayout
        android:id="@+id/pricesItem"
        android:layout_below="@+id/titlePrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:orientation="horizontal">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/pricesRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        </androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>


</RelativeLayout>